<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/figure5_27_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/b_with_blue_back"/>
    <TextView
        android:id="@+id/figure5_27_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="@+id/figure5_27_img"
        app:layout_constraintStart_toEndOf="@+id/figure5_27_img"
        android:layout_marginLeft="10dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/figure5_27_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/figure5_27_text1"
        app:layout_constraintStart_toEndOf="@+id/figure5_27_img"
        android:layout_marginLeft="10dp"
        android:text="Name"
        android:textColor="@color/shelfStage2"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/figure5_27_img">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirm"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corner_blue_back"
            android:layout_marginLeft="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Not Now"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:background="@drawable/border_grey"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>