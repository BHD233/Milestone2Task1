<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/shelfStage4">
    
    <ImageView
        android:id="@+id/figure9_14_img"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/figure9_14_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/figure9_14_img"
        app:layout_constraintTop_toTopOf="@id/figure9_14_img"
        android:layout_marginLeft="10dp"
        android:text="Part 1"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/figure9_14_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/figure9_14_img"
        app:layout_constraintTop_toBottomOf="@id/figure9_14_text"
        android:layout_marginLeft="10dp"
        android:text="Author"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/figure9_14_publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/figure9_14_img"
        app:layout_constraintTop_toBottomOf="@id/figure9_14_author"
        android:layout_marginLeft="10dp"
        android:text="Publisher"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/figure9_14_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="time"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/figure9_14_img"
        app:layout_constraintTop_toBottomOf="@id/figure9_14_publisher" />

</androidx.constraintlayout.widget.ConstraintLayout>